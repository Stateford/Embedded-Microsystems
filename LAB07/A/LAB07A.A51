ORG 0000H
SJMP MAIN

OUTPUT EQU P1.0
	
SWITCH EQU P0

MAIN:
	ACALL INIT
LOOP:
	ACALL TMRDLY
	SJMP LOOP

TMRDLY:
	MOV A, SWITCH
	MOV TH0, A
	MOV TL0, A
	CPL OUTPUT
	SETB TR0
WAIT:
	JNB TF0, WAIT
	CLR TR0
	CLR TF0
	RET
	
INIT:
	;SETB OUTPUT	; SET AS OUTPUT
	MOV SWITCH, #0FFH
	;MOV P0, #00H
	MOV TMOD, #01H
	RET
	
	
END
